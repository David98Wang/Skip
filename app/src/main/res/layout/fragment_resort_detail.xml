<?xml version="1.0" encoding="utf-8"?>
<com.w.david.skip.objects.BottomSheet xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resort_detail_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorResortDetailBackground"
    android:elevation="@dimen/resort_detail_elevation"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/resort_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="@dimen/resort_detail_name_padding_bottom"
        android:paddingLeft="@dimen/resort_detail_padding_left"
        android:paddingTop="@dimen/resort_detail_name_padding_top"
        android:text="Line2"
        android:textColor="@color/colorResortDetailNameText"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/resort_detail_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/resort_detail_elevation"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resort_detail_difficulty_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/resort_detail_padding_left"
            android:text="TextView"
            android:textColor="@color/colorResortDetailDifficulty" />

        <TextView
            android:id="@+id/resort_detail_difficulty_visual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/colorResortDetailDifficulty" />

        <TextView
            android:id="@+id/resort_detail_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/colorResortDetailDistance" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorSecondaryBackground"
        android:paddingTop = "@dimen/resort_detail_weather_padding_top"
        android:paddingBottom = "@dimen/resort_detail_weather_padding_bottom">
        <TextView
            android:id="@+id/resort_detail_weather_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Min"
            android:textColor="@color/colorResortDetailNameText"
            android:textSize="@dimen/text_size_xlarge"
            android:textAlignment="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/resort_detail_weather_ave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ave"
            android:textColor="@color/colorResortDetailNameText"
            android:textSize="@dimen/text_size_xlarge"
            android:textAlignment="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/resort_detail_weather_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Max"
            android:textColor="@color/colorResortDetailNameText"
            android:textSize="@dimen/text_size_xlarge"
            android:textAlignment="center"/>
    </LinearLayout>

</com.w.david.skip.objects.BottomSheet>